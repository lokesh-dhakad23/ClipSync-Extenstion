{
  "manifest_version": 3,
  "name": "ClipSync",
  "description": "Cross-device clipboard manager with Firebase sync using Secret Room ID",
  "version": "1.0.0",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.firebaseio.com/*",
    "https://*.firebase.com/*",
    "https://*.firebasedatabase.app/*",
    "https://*.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.firebaseio.com https://*.firebase.com https://*.firebasedatabase.app https://*.googleapis.com wss://*.firebaseio.com wss://*.firebasedatabase.app;"
  },
  "oauth2": {
    "client_id": "462884445494-10cbggql9tjtmkq3b6nrcrd8cfos6v3o.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "openid"
    ]
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "ClipSync",
    "default_icon": {
      "16": "icons/logo192.png",
      "48": "icons/logo192.png",
      "128": "icons/logo192.png"
    }
  },
  "icons": {
    "16": "icons/logo192.png",
    "48": "icons/logo192.png",
    "128": "icons/logo192.png"
  }
}

